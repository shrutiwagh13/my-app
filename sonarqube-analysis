pipeline {
    agent any

    environment {
        SONARQUBE_URL = 'http://192.168.29.6:9000' // Replace with your SonarQube server URL
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build') {
            steps {
                script {
                    // Your build steps (e.g., Maven build)
                    sh 'mvn clean install'
                }
            }
        }

        stage('SonarQube Analysis') {
            steps {
                script {
                    withSonarQubeEnv('sonar') {
                        sh 'mvn sonar:sonar'
                    }
                }
            }
        }
    }

    post {
        always {
            script {
                // Perform any cleanup or notification steps here
            }
        }
        success {
            script {
                // Perform actions when the build is successful
            }
        }
        failure {
            script {
                // Perform actions when the build fails
            }
        }
    }
}

